import rasterio
from rasterstats import zonal_stats
from shapely.geometry import box, mapping
from pyproj import Transformer

def get_band_means_zonal(tif_file, lon, lat, width_m, height_m):
    """คำนวณค่าเฉลี่ย DN ของแต่ละ band ใน polygon รอบพิกัด"""
    with rasterio.open(tif_file) as src:
        # แปลงพิกัด WGS84 → CRS ของ raster
        transformer = Transformer.from_crs("EPSG:4326", src.crs, always_xy=True)
        x, y = transformer.transform(lon, lat)

        # สร้าง polygon
        half_w, half_h = width_m / 2, height_m / 2
        rect = box(x - half_w, y - half_h, x + half_w, y + half_h)

        # คำนวณค่าเฉลี่ย per band
        band_names = ["blue", "green", "red", "nir"][:src.count]
        dn_means = {}
        for i, band_name in enumerate(band_names, start=1):
            stats = zonal_stats([mapping(rect)], tif_file, stats=["mean"], band=i)
            dn_means[band_name] = stats[0]["mean"]

        return dn_means

# ---------------- Fixed GeoTIFF File ----------------
tif_file = "IMAGERY.TIF"  # ใส่ไฟล์ GeoTIFF ตรงนี้

# ---------------- กรอกพิกัดและขนาดพื้นที่ ----------------
lon = float(input("กรอก Longitude: "))
lat = float(input("กรอก Latitude: "))
width_m = float(input("กรอกความกว้างพื้นที่ (เมตร): "))
height_m = float(input("กรอกความสูงพื้นที่ (เมตร): "))

dn_means = get_band_means_zonal(tif_file, lon, lat, width_m, height_m)

print("\nค่าเฉลี่ย DN ของแต่ละ band:")
for b, val in dn_means.items():
    print(f"{b.capitalize()}: {val:.2f}")
