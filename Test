// Evalscript V3
// จะส่งออก Blue, Green, Red, NIR แบบจำนวนเต็ม (reflectance*100)
function setup() {
  return {
    input: ["B02", "B03", "B04", "B08"], // Blue, Green, Red, NIR
    output: { bands: 4, sampleType: "UINT16" }
  };
}

function evaluatePixel(sample) {
  let blue  = Math.round(sample.B02 * 100.0);
  let green = Math.round(sample.B03 * 100.0);
  let red   = Math.round(sample.B04 * 100.0);
  let nir   = Math.round(sample.B08 * 100.0);

  return [blue, green, red, nir];
}
