<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>Satellite Overlay + Boundary</title>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<style>#map { height: 600px; }</style>
</head>
<body>
<h3>Satellite + Boundary Toggle</h3>
<div id="map"></div>

<script>
var map = L.map('map').setView([13.7367, 100.5231], 10);

// Base layer: Satellite RGB
var satLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
    attribution: 'Esri Satellite'
}).addTo(map);

// Overlay layer: boundaries
var boundaryLayer = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: 'OSM Boundaries'
});

// Layer control
var baseMaps = {
    "Satellite Only": satLayer,
    "Satellite + Boundaries": L.layerGroup([satLayer, boundaryLayer])
};

L.control.layers(baseMaps).addTo(map);
</script>
</body>
</html>
