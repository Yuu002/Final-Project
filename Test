<!DOCTYPE html>
<html>
<head>
    <title>AGB + Basemap Example</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <style>
        #map { height: 600px; width: 100%; }
    </style>
</head>
<body>
    <h3>AGB Map + Basemap</h3>
    <div id="map"></div>

    <script>
        var map = L.map('map').setView([13.7367, 100.5231], 6);

        // Basemap: Satellite
        var basemap = L.tileLayer(
            'https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}',
            { attribution: 'Esri', maxZoom: 19 }
        ).addTo(map);

        // AGB overlay (ตัวอย่างเป็น semi-transparent tile layer)
        var agbLayer = L.tileLayer(
            'https://your-server.com/agb_tiles/{z}/{x}/{y}.png', // ใส่ URL ของ AGB tile
            { opacity: 0.6, attribution: 'AGB Data' }
        ).addTo(map);

        // Optional: Layer control
        var baseMaps = { "Basemap": basemap };
        var overlayMaps = { "AGB": agbLayer };
        L.control.layers(baseMaps, overlayMaps).addTo(map);
    </script>
</body>
</html>
