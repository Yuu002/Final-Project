from sentinelhub import SHConfig, BBox, CRS, SentinelHubRequest, DataCollection

# üîπ ‡πÉ‡∏™‡πà‡∏Ñ‡πà‡∏≤ Client ID, Client Secret, Instance ID ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì
CLIENT_ID = "5fe79f43-3c2d-4cf6-9184-478e247504b7"
CLIENT_SECRET = "uYQ6E6NvUDucLx0yRqz4zrUyeuWcX09U"
INSTANCE_ID = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxx"  # ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡∏Ç‡∏≠‡∏á‡∏à‡∏£‡∏¥‡∏á

# üîπ ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ SHConfig
config = SHConfig()
config.sh_client_id = CLIENT_ID
config.sh_client_secret = CLIENT_SECRET
config.instance_id = INSTANCE_ID

print("üîπ ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö Sentinel Hub credentials & instance")
print("Client ID:", config.sh_client_id)
print("Instance ID:", config.instance_id)

# üîπ ‡∏ó‡∏î‡∏™‡∏≠‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏Å request ‡πÄ‡∏•‡πá‡∏Å ‡πÜ
bbox = BBox([100.3, 18.1, 100.31, 18.11], crs=CRS.WGS84)

try:
    request = SentinelHubRequest(
        data_folder=None,
        evalscript="""
        //VERSION=3
        function setup(){ return {input:["B04"], output:{bands:1}};}
        function evaluatePixel(sample){ return [sample.B04]; }
        """,
        input_data=[SentinelHubRequest.input_data(
            data_collection=DataCollection.SENTINEL2_L1C,
            time_interval=("2020-06-01", "2020-06-02")
        )],
        responses=[SentinelHubRequest.output_response("default")],
        bbox=bbox,
        size=(2,2),
        config=config
    )
    data = request.get_data()
    print("‚úÖ Credentials ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á ‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å API ‡πÑ‡∏î‡πâ")
except Exception as e:
    print("‚ùå ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö credential/instance ‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î:")
    print(e)
