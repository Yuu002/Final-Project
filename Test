import xml.etree.ElementTree as ET

dim_file = "IMAGERY.dim"
tree = ET.parse(dim_file)
root = tree.getroot()

# ดูว่า root tag อะไร
print("Root tag:", root.tag)

# แสดงข้อมูล bands
bands = root.findall(".//Raster_Data/Band")  # path ขึ้นอยู่กับ structure จริง
print(f"Number of bands: {len(bands)}")
for b in bands:
    print("Band name:", b.get("name"), "Wavelength:", b.get("wavelength"))

# Spatial resolution
pixel_size = root.find(".//Pixel_Size")
if pixel_size is not None:
    print("Pixel size:", pixel_size.attrib)

# CRS
projection = root.find(".//Projection")
if projection is not None:
    print("Projection:", projection.attrib)
