import streamlit as st
from streamlit_folium import st_folium
import folium

st.set_page_config(layout="wide")
st.title("üåç ‡πÅ‡∏ú‡∏ô‡∏ó‡∏µ‡πà‡∏†‡∏≤‡∏û‡∏à‡∏£‡∏¥‡∏á (Esri Satellite)")

# ‡∏û‡∏¥‡∏Å‡∏±‡∏î‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô (‡∏õ‡∏£‡∏∞‡πÄ‡∏ó‡∏®‡πÑ‡∏ó‡∏¢)
m = folium.Map(location=[15.87, 100.99], zoom_start=6)

# ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÅ‡∏ú‡∏ô‡∏ó‡∏µ‡πà Esri World Imagery (‡∏†‡∏≤‡∏û‡∏à‡∏£‡∏¥‡∏á)
folium.TileLayer(
    tiles="https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}",
    attr="Esri World Imagery",
    name="Esri Satellite",
    overlay=False,
    control=True
).add_to(m)

# Marker ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á
folium.Marker(
    [13.7563, 100.5018],  # Bangkok
    popup="‡∏Å‡∏£‡∏∏‡∏á‡πÄ‡∏ó‡∏û‡∏Ø (Bangkok)",
    tooltip="‡∏Ñ‡∏•‡∏¥‡∏Å‡∏î‡∏π‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•"
).add_to(m)

# ‡πÅ‡∏™‡∏î‡∏á‡πÉ‡∏ô Streamlit
st_folium(m, width=1200, height=700)
