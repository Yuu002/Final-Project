<!DOCTYPE html>
<html>
<head>
  <title>OpenLayers Basic Map</title>
  <!-- ใส่ OpenLayers CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v7.4.0/ol.css">
  <style>
    #map {
      width: 100%;
      height: 600px;
    }
    #datepicker {
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 1000;
      background: white;
      padding: 5px;
      border-radius: 4px;
    }
  </style>
</head>
<body>

  <!-- Date picker -->
  <input type="date" id="datepicker">

  <!-- Map container -->
  <div id="map"></div>

  <!-- ใส่ OpenLayers JS -->
  <script src="https://cdn.jsdelivr.net/npm/ol@v7.4.0/dist/ol.js"></script>
  <script>
    // สร้าง map พื้นฐาน
    var map = new ol.Map({
      target: 'map',
      layers: [
        new ol.layer.Tile({
          source: new ol.source.OSM() // ใช้ OpenStreetMap เป็นพื้นหลัง
        })
      ],
      view: new ol.View({
        center: ol.proj.fromLonLat([0, 0]), // กำหนดจุดกลางโลก
        zoom: 2
      })
    });

    // ตัวอย่างการดึงค่าจาก date picker
    var dateInput = document.getElementById('datepicker');
    dateInput.addEventListener('change', function() {
      var selectedDate = dateInput.value;
      console.log("User selected date:", selectedDate);
      // ที่ตรงนี้สามารถเรียก backend เพื่อเอา tile หรือข้อมูล GEE
    });
  </script>

</body>
</html>
