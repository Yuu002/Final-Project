    const map = new ol.Map({
      target: 'map',
      layers: [
        new ol.layer.Tile({ 
          source: new ol.source.OSM() // พื้นหลัง OpenStreetMap
        }),
        new ol.layer.Tile({
          source: new ol.source.XYZ({
            url: 'YOUR_TILE_URL_HERE'  // แทนที่ด้วย tile_url จาก Python
          })
        })
      ],
      view: new ol.View({
        center: ol.proj.fromLonLat([0, 0]),
        zoom: 2
      })
    });
  </script>
