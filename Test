import pandas as pd
import pickle
from sklearn.svm import SVR
from sklearn.preprocessing import StandardScaler

# -------------------------------------------------
# 1. โหลดข้อมูลจาก Excel
# -------------------------------------------------
# สมมติว่าไฟล์ชื่อ dataset.xlsx และ sheet แรกมีข้อมูล
# X = ค่าดัชนีพืชพรรณ (NDVI, TNDVI, SR, SAVI, MSAVI2)
# y = ค่ามวลชีวภาพเหนือพื้นดิน (AGB)
# -------------------------------------------------

df = pd.read_excel("dataset.xlsx")

# ปรับชื่อตามคอลัมน์จริงในไฟล์
X = df[["NDVI", "TNDVI", "SR", "SAVI", "MSAVI2"]].values
y = df["AGB"].values

# -------------------------------------------------
# 2. เตรียม Scaler
# -------------------------------------------------
scaler_X = StandardScaler()
scaler_y = StandardScaler()

X_scaled = scaler_X.fit_transform(X)
y_scaled = scaler_y.fit_transform(y.reshape(-1, 1))

# -------------------------------------------------
# 3. เทรนโมเดล SVR
# -------------------------------------------------
svr_model = SVR(kernel='rbf', C=100, gamma=0.1, epsilon=0.1)
svr_model.fit(X_scaled, y_scaled.ravel())

# -------------------------------------------------
# 4. เซฟไฟล์โมเดลและ Scaler
# -------------------------------------------------
with open("models/svr_agb_model.pkl", "wb") as f:
    pickle.dump(svr_model, f)

with open("models/svr_scaler_X.save", "wb") as f:
    pickle.dump(scaler_X, f)

with open("models/svr_scaler_y.save", "wb") as f:
    pickle.dump(scaler_y, f)

print("✅ SVR model and scalers saved to 'models/'")
