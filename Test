from fastapi import FastAPI
from pydantic import BaseModel
import joblib
import os
import numpy as np
from indices import calculate_indices

app = FastAPI()

# ===== โหลดไฟล์โมเดลและ Scalers =====
BASE_DIR = os.path.dirname(os.path.abspath(__file__))

# --- MLP model สำหรับแปลง Sentinel bands → Ground bands ---
mlp_model = joblib.load(os.path.join(BASE_DIR, "mlp_model.pkl"))
scaler_mlp_X = joblib.load(os.path.join(BASE_DIR, "scaler_mlp_X.pkl"))
scaler_mlp_y = joblib.load(os.path.join(BASE_DIR, "scaler_mlp_y.pkl"))

# --- SVR model สำหรับทำนาย AGB จากดัชนี ---
svr_agb_model = joblib.load(os.path.join(BASE_DIR, "svr_agb_model.pkl"))
scaler_svr_X = joblib.load(os.path.join(BASE_DIR, "scaler_svr_X.pkl"))


# ===== Schema สำหรับ Input =====
class SentinelInput(BaseModel):
    bands: list[float]  # [Band1, Band2, Band3, Band4] จาก Sentinel


# ===== Routes =====
@app.post("/predict_all")
def predict_all(data: SentinelInput):
    # Step 1: รับ Sentinel bands
    X = np.array([data.bands])
    X_scaled = scaler_mlp_X.transform(X)

    # Step 2: ใช้ MLP → Ground bands
    ground_bands_scaled = mlp_model.predict(X_scaled)
    ground_bands = scaler_mlp_y.inverse_transform(ground_bands_scaled)[0]

    # ground_bands = [Blue, Green, Red, NIR]
    blue, green, red, nir = ground_bands

    # Step 3: คำนวณดัชนี
    indices = calculate_indices(red=red, nir=nir, blue=blue, green=green)

    # Step 4: ใช้ SVR → AGB
    indices_array = np.array([[indices["NDVI"], indices["TNDVI"], indices["SR"],
                               indices["SAVI"], indices["MSAVI2"]]])
    indices_scaled = scaler_svr_X.transform(indices_array)
    agb_pred = svr_agb_model.predict(indices_scaled)[0]

    return {
        "input_bands": data.bands,
        "ground_bands": {
            "Blue": float(blue),
            "Green": float(green),
            "Red": float(red),
            "NIR": float(nir)
        },
        "indices": indices,
        "AGB_prediction": float(agb_pred)
    }


# สำหรับรัน uvicorn ตรงๆ
if __name__ == "__main__":
    import uvicorn
    uvicorn.run("app:app", host="0.0.0.0", port=8000, reload=False)
