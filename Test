import math

# ค่าเฉลี่ย DN ของ band
b, g, r, nir = 53, 60, 67, 58

# NDVI
ndvi = (nir - r) / (nir + r)

# TNDVI
L = 0.5
tndvi = math.sqrt(((nir - r) / (nir + r)) + L)

# SR
sr = nir / r

# SAVI
savi = ((1 + L) * (nir - r)) / (nir + r + L)

# MSAVI2
msavi2 = (2 * (nir + 1) - math.sqrt((2 * nir + 1)**2 - 8 * (nir - r))) / 2

print("NDVI   :", ndvi)
print("TNDVI  :", tndvi)
print("SR     :", sr)
print("SAVI   :", savi)
print("MSAVI2 :", msavi2)
