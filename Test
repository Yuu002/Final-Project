def calculate_indices(blue, green, red, nir):
    """คำนวณดัชนีพืชพรรณหลัก 5 ค่า (สูตรใหม่: H2=nir, G2=red, L=0.5)"""
    try:
        L = 0.5  # ค่าคงที่ตามสูตร

        # NDVI = (nir - red) / (nir + red)
        ndvi = (nir - red) / (nir + red) if (nir + red) != 0 else 0

        # TNDVI = SQRT(((nir - red) / (nir + red)) + L)
        tndvi = (((nir - red) / (nir + red)) + L) ** 0.5 if (nir + red) != 0 else 0

        # SR = nir / red
        sr = nir / red if red != 0 else 0

        # SAVI = ((1 + L) * (nir - red)) / (nir + red + L)
        savi = ((1 + L) * (nir - red)) / (nir + red + L) if (nir + red + L) != 0 else 0

        # MSAVI2 = ((2 * nir + 1) - SQRT((2 * nir + 1)^2 - 8 * (nir - red))) / 2
        inner = (2 * nir + 1) ** 2 - 8 * (nir - red)
        msavi2 = ((2 * nir + 1) - (inner ** 0.5)) / 2 if inner >= 0 else 0

    except Exception:
        ndvi, tndvi, sr, savi, msavi2 = 0, 0, 0, 0, 0

    return {
        "NDVI": ndvi,
        "TNDVI": tndvi,
        "SR": sr,
        "SAVI": savi,
        "MSAVI2": msavi2
    }
